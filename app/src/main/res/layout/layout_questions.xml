<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorBUBTBlue">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="15dp">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="start|top"
            app:cardBackgroundColor="@color/colorWhite">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/profileShowQuestion"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_profile_picture_1"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/todo" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/userNameQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:text="@string/download"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/userUploadTimeQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:text="@string/download"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/quesionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/download"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
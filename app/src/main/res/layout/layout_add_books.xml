<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="440dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        >
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="440dp"
            android:background="#6d69df"
            >

            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add books"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/white_border_rounded_corner"
                />

            <EditText
                android:id="@+id/fileNameET"
                android:layout_marginTop="190dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:hint="    enter file name"
                android:textColorHint="#ffffff"
                android:textColor="@color/colorWhite"
                android:background="@drawable/white_border_rounded_corner"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/uploadName"
                android:layout_marginTop="250dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    select pdf"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:background="@drawable/white_border_rounded_corner"
                />

            <Button
                android:id="@+id/uploadPDF"
                android:layout_marginTop="340dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textSize="20sp"
                android:textColor="#6d69df"
                android:textStyle="bold"
                android:background="@drawable/blue_boarder_thick"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
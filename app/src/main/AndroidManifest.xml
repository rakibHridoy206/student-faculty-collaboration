<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentteachercollaborations">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StudentsPortal.StudentNavigationDrawer"
            android:label="@string/title_activity_student_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".StudentsPortal.StudentAuth.StudentAuthActivity" />
        <activity android:name=".FacultyPanel.FacultyAuth.FacultyAuthActivity" />
        <activity
            android:name=".FacultyPanel.FacultyNavigationDrawer"
            android:label="@string/title_activity_faculty_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ReadPdfActivity" />
        <activity android:name=".AdminPanelActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>